# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=

# API Gateway
API_ENDPOINT=http://localhost:3001

# AWS Cognito
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_REGION=us-east-1

# DynamoDB
DYNAMODB_TABLE_NAME=EpicWeaveTable-dev

# S3 Buckets
S3_DESIGNS_BUCKET=epicweave-designs-dev
S3_PRODUCTS_BUCKET=epicweave-products-dev

# CloudFront
CLOUDFRONT_DISTRIBUTION_ID=
CLOUDFRONT_DOMAIN=

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# OpenAI (required for local AI design session)
OPENAI_API_KEY=sk-...

# SQS
SQS_AI_QUEUE_URL=

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ── Local Development (no AWS required) ──────────────────────────────────────
# Set LOCAL_MODE=true to run entirely locally (no Cognito, no DynamoDB, no Stripe)
LOCAL_MODE=true
LOCAL_API_PORT=3001

# Frontend vars for local mode
NEXT_PUBLIC_API_ENDPOINT=http://localhost:3001
NEXT_PUBLIC_LOCAL_MODE=true
NEXT_PUBLIC_SKIP_SESSION_FEE=true

# Cognito vars (only needed when LOCAL_MODE=false / deploying to AWS)
NEXT_PUBLIC_COGNITO_CLIENT_ID=
NEXT_PUBLIC_COGNITO_REGION=us-east-1
